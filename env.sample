# Price Alert Scraper Environment Configuration
# Copy this file to .env and replace the placeholder values with your actual credentials
# DO NOT commit your .env file to version control!

# ==============================================================================
# EMAIL CONFIGURATION (REQUIRED)
# ==============================================================================
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-gmail-app-password
RECIPIENT_EMAIL=recipient@example.com

# ==============================================================================
# SERVICE MODE CONFIGURATION
# ==============================================================================
# Service operating mode: scheduler (long-running), single (run once), oneshot (legacy)
SERVICE_MODE=scheduler

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==============================================================================
# SCHEDULER CONFIGURATION (for SERVICE_MODE=scheduler)
# ==============================================================================
# Check intervals in minutes (how often to check prices)
SCHEDULER_PTC_INTERVAL=180        # Power to Choose: every 3 hours
SCHEDULER_VDA_INTERVAL=360        # Villa del Arco: every 6 hours  
SCHEDULER_ALASKA_INTERVAL=120     # Alaska Airlines: every 2 hours

# Enable/disable specific scrapers
SCHEDULER_PTC_ENABLED=true
SCHEDULER_VDA_ENABLED=true
SCHEDULER_ALASKA_ENABLED=true

# Run scrapers immediately on startup
SCHEDULER_PTC_RUN_IMMEDIATELY=true
SCHEDULER_VDA_RUN_IMMEDIATELY=true
SCHEDULER_ALASKA_RUN_IMMEDIATELY=true

# ==============================================================================
# POWER TO CHOOSE CONFIGURATION
# ==============================================================================
PTC_ZIP_CODE=76092
PTC_CONTRACT_MIN=12
PTC_CONTRACT_MAX=60
PTC_PRICE_THRESHOLD=12.4
PTC_MAX_RESULTS=5
PTC_BASE_URL=https://www.powertochoose.org/en-us

# ==============================================================================
# VILLA DEL ARCO CONFIGURATION
# ==============================================================================
VDA_CHECK_IN=2025-12-16
VDA_CHECK_OUT=2025-12-19
VDA_ADULTS=2
VDA_CHILDREN=2
VDA_PRICE_THRESHOLD=1100
VDA_BASE_URL=https://booking.villadelarco.com/bookcore/availability/villarco/{check_in}/{check_out}/{adults}/{children}/?lang=en&rrc=1&adults={adults}&ninos={children}

# ==============================================================================
# ALASKA AIRLINES AWARD TICKET CONFIGURATION
# ==============================================================================
ALASKA_DEPARTURE_STATIONS=DFW
ALASKA_ARRIVAL_STATIONS=SNA,ONT
ALASKA_ADULTS=3
ALASKA_CHILDREN=2
ALASKA_TARGET_POINTS=7500
ALASKA_SEARCH_DATE=2025-11-14
ALASKA_BASE_SEARCH_URL=https://www.alaskaair.com/search/results?A={adults}&C={children}&L=0&O={departure}&D={arrival}&OD={date}&RT=false&ShoppingMethod=onlineaward

# ==============================================================================
# WEB SCRAPING CONFIGURATION (Advanced)
# ==============================================================================
SCRAPING_TIMEOUT=60000
SCRAPING_WAIT_TIMEOUT=30000
BROWSER_HEADLESS=true
BROWSER_NO_SANDBOX=true

# ==============================================================================
# LEGACY CONFIGURATION (for backward compatibility)
# ==============================================================================
# Used only in SERVICE_MODE=oneshot
# Options: power_to_choose, villa_del_arco, alaska_award_ticket, all
SCRAPER_NAME=all