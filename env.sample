# Price Alert Scraper Environment Configuration
# Copy this file to .env and replace the placeholder values with your actual credentials
# DO NOT commit your .env file to version control!

# Email Configuration (REQUIRED - Replace with your actual credentials)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-gmail-app-password
RECIPIENT_EMAIL=recipient@example.com

# Scraper Selection (OPTIONAL - defaults to 'all')
# Options: power_to_choose, villa_del_arco, all
SCRAPER_NAME=all

# Power to Choose Configuration (OPTIONAL - Customize for your needs)
PTC_ZIP_CODE=your-zip-code
PTC_CONTRACT_MIN=12
PTC_CONTRACT_MAX=60
PTC_PRICE_THRESHOLD=12.4
PTC_MAX_RESULTS=5

# Villa del Arco Configuration (OPTIONAL - Customize for your needs)
VDA_CHECK_IN=your-check-in-date
VDA_CHECK_OUT=your-check-out-date
VDA_ADULTS=2
VDA_CHILDREN=2
VDA_PRICE_THRESHOLD=1100

# Web Scraping Configuration (OPTIONAL - Advanced settings)
SCRAPING_TIMEOUT=60000
SCRAPING_WAIT_TIMEOUT=30000
BROWSER_HEADLESS=true
BROWSER_NO_SANDBOX=true
